    <script src='http://res.wx.qq.com/open/js/jweixin-1.2.0.js'></script>
    <script src='/javascripts/asdf.js'></script>
    <script>
wx.config({
  //debug: true,
  debug: false,
  appId: '<%= app_id %>',
  timestamp: '<%= timestamp %>',
  nonceStr: '<%= noncestr %>',
  signature: '<%= signature %>',
  jsApiList: [
    'startRecord',
    'stopRecord',
    'onVoiceRecordEnd',
    'playVoice',
    'pauseVoice',
    'stopVoice',
    'onVoicePlayEnd',
    'uploadVoice',
    'downloadVoice',
  ]
});

(function(){
  asdf.subtitle = "<%= subtitle %>";
  asdf.server_id = "<%= server_id %>";
